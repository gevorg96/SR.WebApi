@model SmartRetail.App.Web.Models.ViewModel.Products.ProductGroupViewModel


<div class="modal-content">
    <div class="modal-header">
        <div class="container">
            <div class="row">
                <div class="col-9">
                    <h4>Категории</h4>
                </div>
                <div class="col-3"><button type="button" class="btn btn-secondary" onclick="closeFolderModal()">Закрыть</button></div>
            </div>
        </div>
    </div>
    <div class="modal-body">
        <div class="container-fluid">
            <table class="table folderTable">
                <tbody id="tableBodyFolder">
                @foreach (var item in Model.Folders)
                {
                    <tr>
                        <td>
                            <div class="row folderRow" id="@item.fullpath">
                                <div class="col-4">
                                    <p><b>@item.folder</b></p></div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
    <div class="modal-footer">
        @*<button type="button" class="btn btn-secondary" onclick="closeFolderModal()">Закрыть</button>*@
        <button type="button" disabled="disabled" class="btn btn-primary">Сохранить</button>
    </div>
</div>

