@model SmartRetail.App.Web.Models.ViewModel.Auth.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" crossorigin="anonymous">
    <style>
        html,body {
            height: 100%;
        }

        body {
          display: -ms-flexbox;
          display: flex;
          -ms-flex-align: center;
          align-items: center;
          padding-top: 40px;
          padding-bottom: 40px;
          background-color: #f5f5f5;
        }

        .form-signin {
          width: 100%;
          max-width: 330px;
          padding: 15px;
          margin: auto;
        }
        .form-signin .checkbox {
          font-weight: 400;
        }
        .form-signin .form-control {
          position: relative;
          box-sizing: border-box;
          height: auto;
          padding: 10px;
          font-size: 16px;
        }
        .form-signin .form-control:focus {
          z-index: 2;
        }
        .form-signin input[type="email"] {
          margin-bottom: -1px;
          border-bottom-right-radius: 0;
          border-bottom-left-radius: 0;
        }
        .form-signin input[type="password"] {
          margin-bottom: 10px;
          border-top-left-radius: 0;
          border-top-right-radius: 0;
        }

      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }
    </style>
</head>
<body class="text-center">

    <form asp-action="Login" asp-controller="AccountView" asp-anti-forgery="true" class="form-signin">
        <div class="mb-3 text-center">
            <div class="d-inline-flex">
                <h1 class="text-dark">Smart</h1>
                <h1 class="text-primary">Retail</h1>
            </div>
        </div>
        <h1 class="h3 mb-3 font-weight-normal">Вход</h1>
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div class="form-group">
                <label asp-for="Username" class="sr-only">Введите логин</label>
                <input type="text" class="form-control" id="inputEmail" placeholder="Логин" required autofocus asp-for="Username" />
                <span asp-validation-for="Username" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="sr-only">Введите пароль</label>
                <input asp-for="Password" id="inputPassword" class="form-control" placeholder="Пароль" required />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Войти" />
            </div>
            <p class="mt-5 mb-3 text-muted">&copy; 2019-2020</p>
        </div>
    </form>
</body>
</html>
